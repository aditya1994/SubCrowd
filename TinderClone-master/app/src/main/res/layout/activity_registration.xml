<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.subcrowd.app.RegistrationActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/name"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="132dp"
        android:hint="name" />

    <TextView
        android:id="@+id/i_want"
        android:layout_width="133dp"
        android:layout_height="37dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="71dp"
        android:text="I want :"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spinner_need"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_alignTop="@+id/i_want"
        android:layout_alignBottom="@+id/budget"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="209dp"
        android:hint="Select..."
        android:spinnerMode="dialog"
        android:visibility="visible" />

    <TextView
        android:id="@+id/i_give"
        android:layout_width="164dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="444dp"
        android:text="I can give :"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spinner_give"
        android:layout_width="match_parent"
        android:layout_height="37dp"


        android:layout_alignTop="@+id/i_give"
        android:layout_alignBottom="@+id/budget"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="86dp"
        android:hint="Select..."
        android:spinnerMode="dialog"
        android:visibility="visible" />

    <EditText
        android:id="@+id/email"
        android:layout_width="252dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="191dp"
        android:hint="email" />

    <Button
        android:id="@+id/register"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="61dp"
        android:text="Register" />

    <EditText
        android:id="@+id/budget"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="293dp"
        android:hint="Budget ($)"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="134dp"
        android:hint="password" />
</RelativeLayout>
