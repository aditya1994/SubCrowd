<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.subcrowd.app"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:fitsSystemWindows="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="com.subcrowd.app.MainActivity" android:windowSoftInputMode = "adjustResize" android:launchMode="singleTop" />
        <activity android:name="com.subcrowd.app.ChooseLoginRegistrationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.subcrowd.app.SplashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.subcrowd.app.RegistrationActivity" />
        <activity android:name="com.subcrowd.app.LoginActivity" />
        <activity android:name="com.subcrowd.app.SettingsActivity" />
        <activity android:name="com.subcrowd.app.BtnLikeActivity" />
        <activity android:name="com.subcrowd.app.Matches.MatchesActivity" />
        <activity android:name="com.subcrowd.app.ForgotPasswordActivity" />
        <activity android:name="com.subcrowd.app.BtnDislikeActivity"/>
        <activity android:name="com.subcrowd.app.Chat.ChatActivity" android:windowSoftInputMode = "adjustResize">
        </activity>



    </application>

</manifest>